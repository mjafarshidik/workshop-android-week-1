<resources>
    <!-- Base application theme. -->
    <style name="Theme.Week1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="latoBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="latoRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="textH1Black" parent="latoBold">
        <item name="android:textColor">@color/color_charcoal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textH4Black" parent="latoBold">
        <item name="android:textColor">@color/color_charcoal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textRegular12Gray" parent="latoRegular">
        <item name="android:textColor">@color/color_charcoal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textBold10Green" parent="latoBold">
        <item name="android:textColor">@color/colorPigmentGreen</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="carViewCornSilk">
        <item name="android:backgroundTint">@color/colorCornSilk</item>
    </style>

</resources>